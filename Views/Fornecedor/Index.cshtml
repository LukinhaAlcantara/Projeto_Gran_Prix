@model IEnumerable<Gran_Prix.Models.FornecedorModel>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-5 mt-2">
    <h1>Fornecedores</h1>

    <a class="btn mx-5" asp-controller="Fornecedor" asp-action="Create"><i class="bi bi-person-plus" style="font-size:xx-large"></i></a>

</div>
<hr />

<div class="container">

    <table id="Fornecedores" class="table table-dark table-striped mt-5">

        <br />
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {

                @foreach (var fornecedores in Model)

                {
                    <tr>
                        <td scope="row">@fornecedores.Id</td>
                        <td scope="row">@fornecedores.Nome</td>
                        <td>
                            <!--EXCLUIR-->
                            <a class="btn text-white mx-2 float-end" asp-controller="Fornecedor" asp-action="Delete"
                               asp-route-id="@fornecedores.Id"><i class="bi bi-x-lg"></i></a>
                            <!--EDITAR-->
                            <a class="btn text-white mx-2 float-end" asp-controller="Fornecedor" asp-action="Edit"
                               asp-route-id="@fornecedores.Id"><i class="bi bi-pencil"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
