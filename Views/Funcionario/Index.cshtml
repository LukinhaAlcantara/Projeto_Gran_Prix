@model IEnumerable<Gran_Prix.Models.FuncionarioModel>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-5 mt-2">
    <h1>Funcionarios</h1>

    <a class="btn mx-5" asp-controller="Funcionario" asp-action="Create"><i class="bi bi-person-plus" style="font-size:xx-large"></i></a>

</div>

<hr />

<div class="container">

    <table id="Funcionario" class="table table-dark table-striped mt-5">

        <br />
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
                <th scope="col">CPF</th>
                <th scope="col">Código</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {

                @foreach (var funcioanrio in Model)

                {
                    <tr>
                        <td scope="row">@funcioanrio.Nome</td>
                        <td scope="row">@funcioanrio.Telefone</td>
                        <td scope="row">@funcioanrio.CPF</td>
                        <td scope="row">@funcioanrio.Codigo</td>
                        <td>
                            <!--EDITAR-->
                            <a class="btn text-white mx-2" asp-action="Edit"
                               asp-route-id="@funcioanrio.Id"><i class="bi bi-pencil"></i></a>
                            <!--EXCLUIR-->
                            <a class="btn text-white mx-2" asp-action="Delete"
                               asp-route-id="@funcioanrio.Id"><i class="bi bi-x-lg"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

