@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<hr />
<h1 class="text-center">Register</h1>
<hr />

<br />

<div class="container-fluid">
    <div class="row align-items-center">
        <div class="col-xl-3 col-sm-3">
            <!--LADO ESQUERDO-->
        </div>
        <div class="col-xl-6 col-sm-6 bg-dark p-5" id="teste">
            <!--CENTRO-->
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3 text-white">
                    <label asp-for="Input.Email" for="exampleInputEmail1" class="form-label">Email</label>
                    <input asp-for="Input.Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3 text-white">
                    <label asp-for="Input.Password" for="exampleInputPassword1" class="form-label">Senha</label>
                    <input asp-for="Input.Password" type="password" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 text-white">
                    <label asp-for="Input.ConfirmPassword" for="exampleInputPassword1" class="form-label">Confirmar senha</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-flex gap-3 mt-5">
                    <input type="submit" id="registerSubmit" class="btn btn-outline-success w-50" value="Login" />
                    <a class="btn btn-outline-danger w-50" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
        <div class="col-xl-3 col-sm-3">
            <!--LADO DIREITO-->
        </div>
    </div>
</div>

<style>
    #teste {
        opacity: 0.8;
        border-radius: 15px;
    }
</style>




